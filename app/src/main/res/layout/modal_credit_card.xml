<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|top"
            android:contentDescription="Close"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Summary"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Balance"
                android:textSize="16sp"
                android:textColor="#555" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,610.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/balance_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="2500"
            android:progress="1610"
            android:progressTint="#2196F3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out of $2,500.00 limit"
            android:textSize="12sp"
            android:textColor="#777" />

        ---

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Payment Due"
                android:textSize="16sp"
                android:textColor="#555" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$25.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D32F2F" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due on September 15, 2025"
                android:textSize="14sp"
                android:textColor="#777" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calender"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        ---

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Due Date"
                android:textSize="16sp"
                android:textColor="#555" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="September 15, 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/due_date_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="30"
            android:progress="22"
            android:progressTint="#2196F3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 days remaining"
            android:textSize="12sp"
            android:textColor="#777" />

        <TextView
            android:id="@+id/make_payment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make a payment"
            android:gravity="center"
            android:background="@drawable/follow_bg"
            android:backgroundTint="#2196F3"
            android:textStyle="bold
"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>